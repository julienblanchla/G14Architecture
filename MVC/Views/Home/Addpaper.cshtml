@model MVC.Models.PaperDto

@{
    ViewData["Title"] = "Add Paper";
    var printerId = ViewBag.PrinterId;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="container mt-3" style="max-width: 600px;">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            Add Paper
        </div>
        <div class="card-body">
            <form asp-action="AddPaper" method="post">
                <input type="hidden" name="printerId" value="@printerId" />
                <div class="form-group mb-3">
                    <label asp-for="Type" class="control-label">Paper Type</label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Amount" class="control-label">Amount</label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Value" class="control-label">Value (CHF)</label>
                    <input asp-for="Value" class="form-control" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <input type="submit" value="Add Paper" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a href="@Url.Action("PrinterDetails", "Home", new { id = printerId })" class="btn btn-secondary">Back to Details</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
