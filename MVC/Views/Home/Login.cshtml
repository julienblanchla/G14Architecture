@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>

<div class="container mt-3">
    <form asp-action="Login" method="post" class="w-50 mx-auto shadow p-4 mb-4 bg-white">
        <div class="mb-3">
            <label for="Username" class="form-label">Username</label>
            <input type="text" class="form-control" id="Username" name="Username">
        </div>
        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" name="Password">
        </div>
        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    .container {
        max-width: 400px; /* Largeur maximale pour la centralisation */
    }

    .form-control {
        transition: border-color 0.3s; /* Transition douce pour les bordures des champs */
    }

        .form-control:focus {
            border-color: #5c67f2; /* Couleur de bordure lors de la sélection */
            box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px rgba(92, 103, 242, 0.6); /* Ombre subtile autour du champ sélectionné */
        }

    button {
        background-color: #5c67f2; /* Couleur de fond du bouton */
        transition: background-color 0.3s; /* Transition douce pour le fond du bouton */
    }

        button:hover {
            background-color: #4a54e1; /* Changement de couleur au survol */
        }
</style>
